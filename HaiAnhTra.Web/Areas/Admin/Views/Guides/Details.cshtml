@model HaiAnhTra.Web.Models.Guide
@{
    ViewData["Title"] = "Chi tiết bài hướng dẫn";
}
<h1 class="mb-3">@ViewData["Title"]</h1>

<div class="card p-3">
    <h3 class="mb-1">@Model.Title</h3>
    <div class="text-muted small mb-3">
        Slug: @Model.Slug &nbsp;•&nbsp; Ngày đăng: @Model.PublishedAt.ToString("dd/MM/yyyy HH:mm") &nbsp;•&nbsp;
        Trạng thái: @((Model.IsPublished) ? "Hiển" : "Ẩn")
    </div>
    <div class="content">
        @Html.Raw(Model.Content)
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Sửa</a>
    <a class="btn btn-outline-secondary" asp-action="Index">Quay lại</a>
</div>
