@model HaiAnhTra.Web.Helpers.PaginatedList<HaiAnhTra.Web.Models.Product>
@using HaiAnhTra.Web.Models
@{
    ViewData["Title"] = "Sản phẩm"; var type = ViewBag.Type as string; var q = ViewBag.Q as string;
}
<h1 class="mb-3">Sản phẩm</h1>

<form method="get" class="row g-2 align-items-end mb-3">
    <div class="col-md-3">
        <label class="form-label">Danh mục</label>
        <select name="type" class="form-select">
            <option value="">Tất cả</option>
            <option value="Tea" selected="@(type == "Tea")">Trà</option>
            <option value="Tool" selected="@(type == "Tool")">Dụng cụ</option>
        </select>
    </div>
    <div class="col-md-6">
        <label class="form-label">Tìm kiếm</label>
        <input name="q" value="@q" class="form-control" placeholder="Tên sản phẩm..." />
    </div>
    <div class="col-md-3">
        <button class="btn btn-primary w-100" type="submit">Lọc</button>
    </div>
</form>

<div class="mb-3"><a class="btn btn-success" asp-action="Create">+ Thêm sản phẩm</a></div>

<table class="table table-hover align-middle">
    <thead><tr><th>Tên</th><th>Loại</th><th>Giá</th><th>Hiển thị</th><th></th></tr></thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>
                    <div class="d-flex align-items-center gap-2">
                        <img src="@p.ImageUrl" alt="@p.Name" style="width:48px;height:48px;object-fit:cover;border-radius:8px" />
                        <div><div class="fw-semibold">@p.Name</div><div class="small text-muted">@p.Slug</div></div>
                    </div>
                </td>
                <td>@p.Type</td>
                <td>@(p.Price?.ToString("#,##0") ?? "-")</td>
                <td>
                    <form asp-action="ToggleActive" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@p.Id" />
                        <button class="btn btn-sm @(p.IsActive ? "btn-outline-success" : "btn-outline-secondary")">
                            @(p.IsActive ? "Đang hiển" : "Ẩn")
                        </button>
                    </form>
                </td>
                <td class="text-end">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@p.Id">Sửa</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@p.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@await Html.PartialAsync("_Pager", Model)
