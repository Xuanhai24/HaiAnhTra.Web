@model string  /* returnUrl */
@{
    ViewData["Title"] = "Đăng nhập";
}
<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card shadow-sm border-0">
            <div class="card-body p-4">
                <h1 class="h4 mb-3">Đăng nhập quản trị</h1>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">Đăng nhập thất bại. Vui lòng kiểm tra Email/Mật khẩu.</div>
                }

                <form asp-area="Admin" asp-controller="Account" asp-action="Login" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="returnUrl" value="@Model" />

                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" name="email" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Mật khẩu</label>
                        <input type="password" name="password" class="form-control" required />
                    </div>
                    <div class="d-grid">
                        <button class="btn btn-primary" type="submit">Đăng nhập</button>
                    </div>
                </form>

                <div class="mt-3 small">
                    <a asp-area="" asp-controller="Home" asp-action="Index">← Về trang chủ</a>
                </div>
            </div>
        </div>
    </div>
</div>