@{
    var title = ViewData["Title"] as string ?? "Admin | Hải Anh Trà";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/admin.css" />
</head>
<body>
    <div class="admin-wrap d-flex">
        <!-- Sidebar -->
        <aside class="admin-sidebar">
            <div class="brand">
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="brand-link">
                    <img src="~/images/logo.png" alt="Hải Anh Trà" />
                    <span>Hải Anh Trà</span>
                </a>
            </div>
            <nav class="menu">
                <a class="menu-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")"
                   asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                    <i class="bi bi-speedometer2"></i> Dashboard
                </a>
                <a class="menu-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Products" ? "active" : "")"
                   asp-area="Admin" asp-controller="Products" asp-action="Index">
                    <i class="bi bi-bag"></i> Sản phẩm
                </a>
                <a class="menu-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Guides" ? "active" : "")"
                   asp-area="Admin" asp-controller="Guides" asp-action="Index">
                    <i class="bi bi-journal-text"></i> Hướng dẫn
                </a>
                <a class="menu-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Leads" ? "active" : "")"
                   asp-area="Admin" asp-controller="Leads" asp-action="Index">
                    <i class="bi bi-people"></i> Leads
                </a>
                <a class="menu-item" asp-area="" asp-controller="Home" asp-action="Index" target="_blank">
                    <i class="bi bi-box-arrow-up-right"></i> Xem website
                </a>
            </nav>
        </aside>

        <!-- Main -->
        <div class="admin-main flex-grow-1">
            <header class="admin-topbar">
                <div class="container-fluid d-flex align-items-center justify-content-between">
                    <div class="h6 m-0 text-white">@title</div>
                    <div class="d-flex align-items-center gap-3">
                        <form method="get" action="@Url.Action("Index", "Leads", new { area = "Admin" })" class="d-none d-md-flex">
                            <input name="q" class="form-control form-control-sm" placeholder="Tìm nhanh (lead)..." />
                        </form>
                        <a class="btn btn-sm btn-outline-light" asp-area="Admin" asp-controller="Account" asp-action="Logout">
                            <i class="bi bi-box-arrow-right"></i> Đăng xuất
                        </a>
                    </div>
                </div>
            </header>

            <main class="admin-content container-fluid py-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
